<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul >
                    <% orders.forEach(order => { %>
                        <li >
                            <h1><%= order._id %></h1>
                            <ul >
                                <% order.products.forEach(prod => { %>
                                    <li >
                                        <%= prod.product.title %> - Quantity: <%= prod.quantity %>
                                    </li>
                                <% }) %>
                            </ul>

                        </li>
                    <% }) %>
                </ul>
                <hr>
                
            <% } else { %>
                <h1>No Orders!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>